
# call this to dump color table for codes to use with XCOLOR
function print_colors { for colour in {1..225}; do echo -en "\033[38;5;${colour}m ${colour}:abcwyz \n"; done | column -x; }

NOCOLOR="\[\033[0m\]"
#LIGHT_WHITE="\[\033[1;37m\]"
#WHITE="\[\033[0;37m\]"
#GRAY="\[\033[1;30m\]"
#BLACK="\[\033[0;30m\]"
#
#RED="\[\033[0;31m\]"
#LIGHT_RED="\[\033[1;31m\]"
#GREEN="\[\033[0;32m\]"
#LIGHT_GREEN="\[\033[1;32m\]"
#YELLOW="\[\033[0;33m\]"
#LIGHT_YELLOW="\[\033[1;33m\]"
#BLUE="\[\033[0;34m\]"
#LIGHT_BLUE="\[\033[1;34m\]"
#MAGENTA="\[\033[0;35m\]"
#LIGHT_MAGENTA="\[\033[1;35m\]"
#CYAN="\[\033[0;36m\]"
#LIGHT_CYAN="\[\033[1;36m\]"

function XCOLOR () { echo -ne "\[\033[38;5;$1m\]"; }

# set a fancy prompt
PS1="[`XCOLOR 172`\u@\h `XCOLOR 39`\t${NOCOLOR} `XCOLOR 220`\W${NOCOLOR}]$ ${NOCOLOR}"

# SSDEPTH is subshell depth count, set in .bash_profile
if (( SSDEPTH > 1 )); then PS1="`XCOLOR 42`[${SSDEPTH}]${NOCOLOR}$PS1"; fi

export PS1

